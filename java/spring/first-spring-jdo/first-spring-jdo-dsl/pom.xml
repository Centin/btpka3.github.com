<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>me.test</groupId>
    <artifactId>first-spring-jdo</artifactId>
    <version>0.0.1-SNAPSHOT</version>
  </parent>
  <artifactId>first-spring-jdo-dsl</artifactId>
  <dependencies>
    <dependency>
      <groupId>me.test</groupId>
      <artifactId>first-spring-jdo-api</artifactId>
      <version>0.0.1-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>com.mysema.querydsl</groupId>
      <artifactId>querydsl-apt</artifactId>
      <version>2.9.0</version>
    </dependency>
    <dependency>
      <groupId>com.mysema.querydsl</groupId>
      <artifactId>querydsl-jdo</artifactId>
      <version>2.9.0</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>com.mysema.querydsl</groupId>
        <artifactId>querydsl-maven-plugin</artifactId>
        <version>3.1.1</version>
        <executions>
          <execution>
            <id>genQueryBean</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>jdo-export</goal>
            </goals>
            <configuration>
              <targetFolder>${project.build.directory}/generated-sources/java</targetFolder>
              <packages>
                <package>me.test.first.spring.jdo.entity</package>
              </packages>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <version>1.7</version>
        <executions>
          <execution>
            <phase>generate-sources</phase>
            <goals>
              <goal>add-source</goal>
            </goals>
            <configuration>
              <sources>
                <source>${project.build.directory}/generated-sources/java</source>
              </sources>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>